{
  "name": "shdraw",
  "displayName": "ShDraw",
  "description": "%extension.description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "shdraw.helloWorld",
        "title": "%command.helloWorld%"
      },
      {
        "command": "shdraw.openExecutionCanvas",
        "title": "%command.openExecutionCanvas%"
      },
      {
        "command": "shdraw.openConfigPanel",
        "title": "%command.openConfigPanel%"
      },
      {
        "command": "shdraw.toggleDrawing",
        "title": "%command.toggleDrawing%"
      },
      {
        "command": "shdraw.openCanvas",
        "title": "%command.openCanvas%"
      }
    ],
    "keybindings": [
      {
        "command": "shdraw.openExecutionCanvas",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d"
      },
      {
        "command": "shdraw.openConfigPanel",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}
